@model List<PartService>

<div class="container px-4 px-lg-5 mt-5">
    <!-- كارت كبير يحتوي على كروت أصغر مع العنوان داخل الكارت الكبير -->
    <div class="card large-card mb-5" style="background-color: #fff; color: black;">
        <div class="card-body">
            <!-- العنوان داخل الكارت الكبير -->
            <h1 class="text-center text-black fw-bold">Our Products</h1>
            <h3 class="text-center text-black mb-4">Services and Parts</h3>

            <!-- أزرار التنقل داخل الكارت الكبير -->
            <div class="text-center mb-4">
                <button class="btn btn-outline-dark me-2 custom-btn" type="button" data-bs-toggle="collapse" data-bs-target="#services" aria-expanded="false" aria-controls="services">
                    Show Services
                </button>
                <button class="btn btn-outline-dark custom-btn" type="button" data-bs-toggle="collapse" data-bs-target="#parts" aria-expanded="false" aria-controls="parts">
                    Show Parts
                </button>
            </div>

            <!-- الأقسام المخفية داخل الكارت -->
            <!-- Services Section -->
            <div class="collapse" id="services">
                <h4 class="text-center text-black mt-4">Services</h4>
                <div class="row d-flex justify-content-center">
                    @foreach (var service in Model.Where(m => m.ProdServCategory.Name == "Services"))
                    {
                        <div class="col-md-3 mb-4">
                            <!-- كارت صغير داخل الكارت الكبير -->
                            <div class="card small-card" style="background-color: #fff; color: black;">
                                <a href="/CustomerPS/Details/@service.Id">
                                    <img class="card-img-top rounded-top custom-img" src="~/@service.Img" alt="Service Image" />
                                </a>
                                <div class="card-body p-3 text-center">
                                    <h5 class="fw-bold">@service.Name</h5>
                                    <p class="text-muted mb-2">$@service.Price</p>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-center">
                                    <a class="btn btn-dark btn-sm rounded-pill px-3 custom-add-to-cart-btn" href="/CustomerPS/Details/@service.Id">
                                        <i class="bi bi-cart-plus"></i> Add To Cart
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Parts Section -->
            <div class="collapse" id="parts">
                <h4 class="text-center text-black mt-4">Parts</h4>
                <div class="row d-flex justify-content-center">
                    @foreach (var part in Model.Where(m => m.ProdServCategory.Name == "Parts"))
                    {
                        <div class="col-md-3 mb-4">
                            <!-- كارت صغير داخل الكارت الكبير -->
                            <div class="card small-card" style="background-color: #fff; color: black;">
                                <a href="/CustomerPS/Details/@part.Id">
                                    <img class="card-img-top rounded-top custom-img" src="~/@part.Img" alt="Part Image" />
                                </a>
                                <div class="card-body p-3 text-center">
                                    <h5 class="fw-bold">@part.Name</h5>
                                    <p class="text-muted mb-2">$@part.Price</p>
                                </div>
                                <div class="card-footer bg-transparent border-0 text-center">
                                    <a class="btn btn-dark btn-sm rounded-pill px-3 custom-add-to-cart-btn" href="/CustomerPS/Details/@part.Id">
                                        <i class="bi bi-cart-plus"></i> Add To Cart
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<head>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom CSS -->
    <style>
        /* تحسين الأزرار */
        .custom-btn {
            transition: all 0.3s ease-in-out;
            padding: 12px 24px;
            font-size: 16px;
            border-radius: 25px;
            background-color: #fff;
            color: black;
            border: 1px solid #000;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

            .custom-btn:hover {
                background-color: #f8f8f8;
                color: black;
                box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
            }

        .custom-add-to-cart-btn {
            background: linear-gradient(to right, #f8f8f8, #ddd);
            border: 1px solid #000;
            color: black;
            transition: all 0.3s ease-in-out;
        }

            .custom-add-to-cart-btn:hover {
                background: linear-gradient(to right, #e0e0e0, #bbb);
                box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            }

        /* تحسين الصور */
        .custom-img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-radius: 12px;
            transition: transform 0.3s ease;
        }

            .custom-img:hover {
                transform: scale(1.05);
            }

        /* تحسين الكروت الصغيرة داخل الكارت الكبير */
        .small-card {
            border-radius: 12px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out, box-shadow 0.3s ease;
            background-color: #fff;
            color: black;
        }

            .small-card:hover {
                transform: translateY(-10px);
                box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.2);
            }

        /* تحسين الكارت الكبير */
        .large-card {
            border-radius: 12px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
            background-color: #fff;
            color: black;
        }

        /* تنسيق العناوين */
        .fw-bold {
            font-size: 1.2rem;
        }

        /* تحسين العناوين في الأقسام المخفية */
        h3, h4 {
            font-size: 1.5rem;
            font-weight: bold;
            color: black;
        }
    </style>
</head>
