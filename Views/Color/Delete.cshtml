@model ColorViewModel
@{
    ViewData["Title"] = "Delete";
}
<br />

<h1>Are you sure To Delete this Color </h1>
<br />
<br />
<form asp-controller="Color" asp-action="Delete" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name"> </label>
        <input class="form-control" asp-for="Name" readonly>
    </div>

    <input type="submit" class="btn btn-danger" value="Delete" />
    <a asp-controller="Color" asp-action="Index" class="btn btn-dark">Cancel</a>
</form>