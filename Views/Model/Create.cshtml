<h1>Add Model</h1>

<form asp-controller="Model" asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="Name"> </label>
        <input class="form-control" asp-for="Name">
        <span asp-asp-validation-for="BrandName" class="text-danger"> </span>
    </div>
    <div class="form-group">
        <label asp-for="Brand"> </label>
        <input class="form-control" asp-for="BrandId">
        <span asp-asp-validation-for="BrandName" class="text-danger"> </span>
    </div>

    <input type="submit" class="btn btn-dark" value="Add" />
    <a asp-controller="Model" asp-action="Index" class="btn btn-dark">Back To List</a>

</form>