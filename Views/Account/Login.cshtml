@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg p-4">
            <h3 class="text-center font-weight-bold mb-4">Login to Your Account</h3>

            <form asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Email" class="font-weight-bold"></label>
                    <input asp-for="Email" class="form-control rounded-pill" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="font-weight-bold"></label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label font-weight-bold"></label>
                </div>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-dark btn-block rounded-pill" style="width: 150px;">Log In</button>
                </div>

                <div class="form-group text-center mt-3">
                    <p>Don't have an account? <a asp-action="Register" class="text-dark font-weight-bold">Register Now!</a></p>
                </div>
            </form>
        </div>
    </div>
</div>


