@model CarViewModel
@{
    ViewData["Title"] = "Delete";
}
<br />

<h1>Are you sure To Delete this Car </h1>
<br />
<br />
<form asp-controller="Car" asp-action="Delete" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <partial name="Partialviews/DeleteDetailsCarPartial" />

    <input type="submit" class="btn btn-danger" value="Delete" />
    <a asp-controller="Car" asp-action="Index" class="btn btn-dark">Cancel</a>
</form>
