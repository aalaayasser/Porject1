@model DriverViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="row" style="margin-top: 130px;">
    <div class="col-md-6 offset-md-3">
        <div class="hive-box" style="border: 1px solid #dee2e6; border-radius: 5px; padding: 20px; background-color: #f8f9fa;">
            <h4 class="text-center">Create a New Account</h4>
            <hr />
            <form asp-action="Register" asp-controller="Driver" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Name" class="font-weight-bold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter your Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Email" class="font-weight-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="font-weight-bold"></label>
                    <input asp-for="Password" class="form-control" placeholder="Create a password"  />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>



                <div class="form-group">
                    <label asp-for="ContactNumber" class="font-weight-bold"></label>
                    <input asp-for="ContactNumber" class="form-control" placeholder="Enter your Contact Number" />
                    <span asp-validation-for="ContactNumber" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City" class="font-weight-bold"></label>
                    <input asp-for="City" class="form-control" placeholder="Enter your City" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Street" class="font-weight-bold"></label>
                    <input asp-for="Street" class="form-control" placeholder="Enter your Street" />
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Availability" class="font-weight-bold"></label>
                    <input asp-for="Availability" class="form-control" placeholder="Enter your Availability" />
                    <span asp-validation-for="Availability" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="License" class="font-weight-bold"></label>
                    <input asp-for="License" class="form-control" placeholder="Enter your License" />
                    <span asp-validation-for="License" class="text-danger"></span>
                </div>
                  <div class="form-group">
                    <label asp-for="LicenseDate" class="font-weight-bold"></label>
                    <input asp-for="LicenseDate" class="form-control" placeholder="Enter your LicenseDate" />
                    <span asp-validation-for="LicenseDate" class="text-danger"></span>
                </div>
                 <div class="form-group">
                    <label asp-for="LicenseExpDate" class="font-weight-bold"></label>
                    <input asp-for="LicenseExpDate" class="form-control" placeholder="Enter your LicenseExpDate" />
                    <span asp-validation-for="LicenseExpDate" class="text-danger"></span>
                </div>

                <br />
                <div class="form-group text-center mb-2">
                    <button type="submit" class="btn btn-dark btn-block">Register as a Driver</button>
                </div>


            </form>
        </div>
    </div>
</div>
