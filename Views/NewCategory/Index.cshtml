@model List<ProdServCategory>
@{
    ViewBag.PageTitle = "Category Mangament";
    ViewBag.CardTitle = "  Categories ";
    
}


<a asp-action="Create" asp-controller="NewCategory" class="btn btn-warning">Create Category  </a>
<table class="table table-hover" width="100%">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Date Created</td>
        <td>Edit</td>
        <td>Delete</td>


    </tr>

    @foreach (var cat in Model)
    {
        <tr>
            <td>@cat.Name</td>
            <td>@cat.Description</td>
            <td>@cat.CreatedTime</td>
            <td>
                <a asp-action="Edit" asp-controller="NewCategory" asp-route-id="@cat.Id" class="btn btn-success">Edit</a>
            </td>
            <td>
                <a asp-action="Delete" asp-controller="NewCategory" asp-route-id="@cat.Id" class="btn btn-success">Delete</a>
            </td>

        </tr>


    }
</table>
