@model PartServiceVM

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Update Product";
    
}

<div class="card shadow p-4">
    <h3 class="card-title text-center mb-4">@ViewBag.CardTitle</h3>
    <form method="post" asp-action="Edit" asp-controller="PartService" enctype="multipart/form-data">
        <input hidden asp-for="partService.Id" />
        <input hidden asp-for="partService.Img" />

        <div class="row">
            <!-- Left Column -->
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="partService.Name" class="form-label fw-bold"></label>
                    <input asp-for="partService.Name" class="form-control" placeholder="Enter product name" />
                    <span asp-validation-for="partService.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="partService.Description" class="form-label fw-bold"></label>
                    <textarea asp-for="partService.Description" class="form-control" placeholder="Enter product description"></textarea>
                    <span asp-validation-for="partService.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="partService.Price" class="form-label fw-bold"></label>
                    <input asp-for="partService.Price" type="number" class="form-control" placeholder="Enter product price" />
                    <span asp-validation-for="partService.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="partService.ProdServCategoryId" class="form-label fw-bold"></label>
                    <select asp-for="partService.ProdServCategoryId" class="form-control" asp-items="@Model.CategoryList">
                        <option disabled selected>-- Select Category --</option>
                    </select>
                    <span asp-validation-for="partService.ProdServCategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label for="imgfile" class="form-label fw-bold">Upload Image</label>
                    <input type="file" name="file" id="imgfile" class="form-control" />
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-4">
                <div class="container">
                    <img src="~/@Model.partService.Img" width="300" height="300" style="margin-left:300px;margin-top:70px" />
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" value="Save" class="btn btn-primary px-4 me-2">Save Changes</button>
            <a asp-action="Index" asp-controller="PartService" class="btn btn-warning px-4">Back to Index</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


