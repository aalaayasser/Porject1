@model List<PartService>
@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Products";
    
}

<a asp-action="Create" asp-controller="PartService" class="btn btn-warning" enctype="multipart/form-data">Add</a>
<table class="table table-hover" width="100%">
    <thead>
        <tr>
            <th>Image</th> <!-- عمود الصورة -->
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Category</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    <img src="@Url.Content("~/" + product.Img)" alt="@product.Name" alt="Product Image" width="100" height="100" class="img-thumbnail" />
                </td> <!-- عرض الصورة -->
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@product.Price</td>
                <td>@product.ProdServCategory.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="PartService" asp-route-id="@product.Id" class="btn btn-success">Edit</a>
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="PartService" asp-route-id="@product.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


